---
import Layout from "../layouts/Layout.astro";

// Dostęp do danych użytkownika
const { user } = Astro.locals;
---

<Layout title="Generator fiszek">
  <div class="container mx-auto px-4 py-8">
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-center">Generator fiszek</h1>
      <p class="text-center text-gray-200 mt-2">Witaj {user?.email || "użytkowniku"}!</p>
    </header>

    <div class="flex justify-end mb-4">
      <form method="POST" action="/api/auth/logout">
        <button 
          type="submit" 
          class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors"
        >
          Wyloguj się
        </button>
      </form>
    </div>

    <div class="bg-gray-800 rounded-lg p-6 shadow-lg">
      <p class="text-lg text-center">
        Miejsce na interfejs generowania fiszek.
      </p>
    </div>
  </div>
</Layout>
