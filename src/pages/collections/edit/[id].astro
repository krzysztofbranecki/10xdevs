---
import Layout from "../../../layouts/Layout.astro";
import PageWrapper from "../../../components/common/PageWrapper.astro";

// Mock data for demonstration
const mockCollection = {
  id: 1,
  name: "Angielski podstawowy",
  description: "Podstawowe słówka do nauki języka angielskiego",
};
---

<Layout title={`Edytuj kolekcję: ${mockCollection.name}`}>
  <PageWrapper title="Edytuj kolekcję" description="Zmień nazwę i opis swojej kolekcji fiszek">
    <form
      class="max-w-xl mx-auto bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-lg rounded-xl p-8 border border-white/10 shadow-lg"
      method="POST"
      action="#"
    >
      <div class="mb-6">
        <label for="name" class="block text-blue-100 font-medium mb-2">Nazwa kolekcji</label>
        <input
          id="name"
          name="name"
          type="text"
          class="w-full px-4 py-2 rounded-lg bg-white/10 text-white border border-white/20 focus:outline-none focus:ring-2 focus:ring-blue-400"
          value={mockCollection.name}
          required
        />
      </div>
      <div class="mb-6">
        <label for="description" class="block text-blue-100 font-medium mb-2">Opis kolekcji</label>
        <textarea
          id="description"
          name="description"
          class="w-full px-4 py-2 rounded-lg bg-white/10 text-white border border-white/20 focus:outline-none focus:ring-2 focus:ring-blue-400"
          rows="4"
          required>{mockCollection.description}</textarea
        >
      </div>
      <div class="flex justify-end space-x-3">
        <a href="/collections" class="px-4 py-2 bg-white/10 hover:bg-white/20 text-white rounded-lg transition-colors"
          >Anuluj</a
        >
        <button
          type="submit"
          class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium"
          >Zapisz zmiany</button
        >
      </div>
    </form>
  </PageWrapper>
</Layout>
