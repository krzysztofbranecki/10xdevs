---
interface Props {
  title?: string;
  description?: string;
  contentMaxWidth?: string;
}

const { title, description, contentMaxWidth = "max-w-xl" } = Astro.props;
---

<div
  class="relative w-full mx-auto min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 p-4 sm:p-8 flex items-center justify-center"
>
  <div
    class="relative w-full max-w-4xl mx-auto backdrop-blur-xl bg-gradient-to-b from-white/10 to-white/5 rounded-2xl shadow-2xl p-8 text-white border border-white/10"
  >
    <div class={contentMaxWidth + " mx-auto"}>
      {
        (title || description) && (
          <div class="text-center mb-8">
            {title && (
              <h1 class="text-4xl sm:text-5xl font-bold bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 text-transparent bg-clip-text drop-shadow-lg">
                {title}
              </h1>
            )}
            {description && <p class="text-lg sm:text-xl text-blue-100/90 drop-shadow-md mt-3">{description}</p>}
          </div>
        )
      }

      <slot />
    </div>
  </div>
</div>
